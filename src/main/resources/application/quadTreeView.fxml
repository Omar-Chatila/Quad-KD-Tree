<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="633.0" prefWidth="1347.0" style="-fx-background-color: #1E3050;"
            stylesheets="@../mainView.css" xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="controller.TreeController">
    <StackPane layoutX="14.0" layoutY="14.0">
        <Pane fx:id="drawingPane" onMouseClicked="#drawPoint" prefHeight="400.0" prefWidth="400.0"
              style="-fx-background-color: white;"/>
        <Pane fx:id="rectanglePane" prefHeight="200.0" prefWidth="200.0"/>
    </StackPane>
    <JFXTextArea fx:id="pointsLabel" layoutX="14.0" layoutY="506.0" prefHeight="116.0" prefWidth="400.0"
                 style="-fx-background-color: lightGrey;"/>
    <VBox layoutX="438.0" layoutY="14.0" spacing="10.0">
        <ScrollPane fx:id="scrollPane" prefHeight="509.0" prefWidth="885.0">
            <Pane fx:id="treePane" layoutX="449.0" layoutY="14.0" style="-fx-background-color: white;"/>
        </ScrollPane>
        <HBox alignment="CENTER_LEFT">
            <JFXToggleButton fx:id="toggleButton" alignment="CENTER_LEFT" onAction="#toggleMode" prefHeight="90.0"
                             prefWidth="201.0" size="15.0" text="QuadTree" textFill="WHITE" unToggleColor="#ff5722"
                             unToggleLineColor="#ff9500ed">
                <font>
                    <Font size="20.0"/>
                </font>
            </JFXToggleButton>
            <Label fx:id="statsLabel" prefHeight="59.0" prefWidth="695.0" text="Height: 0 - #Nodes: 10 - Time: "
                   textFill="WHITE" wrapText="true">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
        </HBox>
    </VBox>
    <VBox layoutX="14.0" layoutY="421.0">
        <HBox alignment="CENTER" prefHeight="35.0" prefWidth="400.0" spacing="10.0">
            <JFXButton fx:id="clearButton" style="-fx-background-color: white;" text="Clear"/>
            <JFXButton onAction="#randomize" style="-fx-background-color: white;" text="Randomize"/>
            <JFXButton onAction="#generate" text="Generate"/>
            <JFXButton onAction="#stressTest" text="Stress Test"/>
            <JFXToggleButton alignment="CENTER_LEFT" onAction="#colorize" prefHeight="43.0" prefWidth="98.0" size="7.0"
                             text="Color" textFill="WHITE"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="400.0" spacing="10.0">
            <Label prefHeight="35.0" prefWidth="55.0" text="Mode:" textFill="WHITE" wrapText="true">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            <JFXRadioButton onAction="#selectDrawMode" selected="true" text="Draw" textFill="WHITE">
                <unSelectedColor>
                    <Color red="0.6973684430122375" green="0.6553971767425537" blue="0.6553971767425537"/>
                </unSelectedColor>
                <font>
                    <Font size="14.0"/>
                </font>
                <toggleGroup>
                    <ToggleGroup fx:id="guiMode"/>
                </toggleGroup>
            </JFXRadioButton>
            <JFXRadioButton onAction="#selectQueryMode" text="Query" textFill="WHITE" toggleGroup="$guiMode">
                <unSelectedColor>
                    <Color red="0.6973684430122375" green="0.6553971767425537" blue="0.6553971767425537"/>
                </unSelectedColor>
                <font>
                    <Font size="14.0"/>
                </font>
            </JFXRadioButton>
        </HBox>
    </VBox>
</AnchorPane>
